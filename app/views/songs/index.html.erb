
<h1>Songs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Description</th>
    <th>Bpm</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.title %></td>
    <td><%= song.artist %></td>
    <td><%= song.description %></td>
    <td><%= song.bpm %></td>
    <td><%= button_to 'Show', song, method: :get%></td>
    <td><%= button_to 'Edit', edit_song_path(song), method: :get %></td>
    <td><%= button_to 'Delete', { action:'destroy', id: song.id, remote: true}, {method: :delete, confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

<br />

